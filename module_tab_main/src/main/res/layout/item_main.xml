<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/common_background_color"
    android:padding="10dp">

    <TextView
        android:id="@+id/tv_item_main_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_main_pic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_item_main_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Content"
        app:layout_constraintEnd_toStartOf="@+id/iv_item_main_pic"
        app:layout_constraintStart_toStartOf="@+id/tv_item_main_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_title" />

    <TextView
        android:id="@+id/tv_item_main_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="author"
        android:textColor="@color/color_news_author"
        app:layout_constraintStart_toStartOf="@+id/tv_item_main_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_main_content" />

    <ImageView
        android:id="@+id/iv_item_main_pic"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:background="@color/common_transparent"
        app:layout_constraintBottom_toBottomOf="@+id/tv_item_main_author"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_item_main_title"
        app:layout_constraintVertical_bias="1.0" />
</android.support.constraint.ConstraintLayout>